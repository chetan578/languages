<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignStart="@+id/button1"
            android:layout_alignTop="@+id/button4"
            android:layout_marginStart="-9dp"
            android:gravity="fill"
            android:onClick="clickedButton6"
            android:text="RUSSIAN"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button0"
            android:layout_marginBottom="145dp"
            android:gravity="fill"
            android:onClick="clickedButton5"
            android:text="JAPANESE "
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="176dp"
            android:layout_height="117dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button2"
            android:layout_marginEnd="3dp"
            android:gravity="fill"
            android:onClick="clickedButton4"
            android:text="GERMAN"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button0"
            android:layout_marginBottom="8dp"
            android:gravity="fill"
            android:onClick="clickedButton7"
            android:text="ITALIAN"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignStart="@+id/button5"
            android:layout_alignTop="@+id/button6"
            android:gravity="fill"
            android:onClick="clickedButton8"
            android:text="CHINESE"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="158dp"
            android:gravity="fill"
            android:onClick="clickedButton3"
            android:text="FRENCH"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignEnd="@+id/button3"
            android:layout_alignTop="@+id/button0"
            android:gravity="fill"
            android:onClick="clickedButton2"
            android:text="HINDI"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button0"
            android:layout_width="168dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:gravity="fill"
            android:onClick="clickedButton1"
            android:text="english "
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>